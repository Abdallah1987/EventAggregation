<UserControl x:Class="EventAggregatorExample.ListDisplay2UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="LightBlue"
             Height="200" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="The blue list" Grid.Row="0" HorizontalAlignment="Center"/>
        <ListView Name="ListView" ItemsSource="{Binding Items}" Grid.Row="1" Background="LightBlue"/>
    </Grid>
</UserControl>