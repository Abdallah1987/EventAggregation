<UserControl x:Class="EventAggregatorExample.ListDisplayUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="LightGreen"
             Height="200" Width="300">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="The green list" Grid.Row="0" HorizontalAlignment="Center"/>
        <ListView Name="ListView" ItemsSource="{Binding Items}" Grid.Row="1" Background="LightGreen"/>
    </Grid>
</UserControl>